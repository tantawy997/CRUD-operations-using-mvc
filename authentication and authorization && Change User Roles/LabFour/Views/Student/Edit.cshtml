@model Student
@{
    Layout = "_Layout";
    ViewBag.Title = "edit student info";
}



<form method="post">
    <input hidden asp-for="id" />
    <div asp-validation-summary="All"></div>
    <input asp-for="name" placeholder="name" /><span asp-validation-for="name"></span><br />
    <input asp-for="age" placeholder="age" /><span asp-validation-for="age"></span><br />
    <input asp-for="email" placeholder="email" /><span asp-validation-for="email"></span><br />
    <input asp-for="username" placeholder="username" /><span asp-validation-for="username"></span><br />
    <select asp-for="DeptNo" asp-items="ViewBag.dept">
    </select><span asp-validation-for="DeptNo"></span><br />
    <input asp-for="password" placeholder="password" /><span asp-validation-for="password"> </span>
    <br />
    <input asp-for="Cpassword" placeholder="Confirm password" /><span asp-validation-for="Cpassword"> </span>
    <br />
    <input type="submit" value="edit" /><br />
    <a asp-action="Index" class="btn btn-primary">return</a>

</form>
