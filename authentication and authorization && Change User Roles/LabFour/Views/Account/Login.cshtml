@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<form method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <input asp-for="username" /><span asp-validation-for="username"></span>
    <br />
    <input asp-for="password" /><span asp-validation-for="password"></span>
    <br />
    <input type="submit" value="submit" />
</form>